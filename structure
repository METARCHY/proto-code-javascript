// Пример использования
const numPlayers = 4;
const game = new MetarchyGame(numPlayers);
game.startGame();

while (game.round <= game.maxRounds) {
  game.phase1Event();
  game.phase2Distribution();
  game.phase3Actions();
  game.phase4Conflict();
  game.phase5Exchange();
  game.round++;
}

game.checkWinner();
